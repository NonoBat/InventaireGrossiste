<Window x:Class="InventaireGrossiste.EditClients.EraseManuClients"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirmer la suppression" Height="200" Width="400">
    <Grid>
        <TextBlock Text="Êtes-vous sûr de vouloir supprimer ce client ?" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" 
                   TextWrapping="Wrap" Margin="10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
            <Button Content="Confirmer" Width="100" Margin="5" Click="ConfirmButton_Click"/>
            <Button Content="Annuler" Width="100" Margin="5" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>