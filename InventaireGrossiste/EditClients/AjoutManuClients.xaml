<Window x:Class="InventaireGrossiste.EditClients.AjoutManuClients"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ajouter un client" Height="300" Width="400">
    
    <Grid>
        <StackPanel>
            <Grid Margin="10">
                <TextBox x:Name="NomTextBox" VerticalAlignment="Center"/>
                <TextBlock Text="Nom" IsHitTestVisible="False" 
                           Foreground="Gray" VerticalAlignment="Center" 
                           Margin="5,0,0,0"></TextBlock>
             </Grid>
            <Grid Margin="10">
                <TextBox x:Name="AdresseTextBox" VerticalAlignment="Center"/>
                <TextBlock Text="Adresse" IsHitTestVisible="False" 
                           Foreground="Gray" VerticalAlignment="Center" 
                           Margin="5,0,0,0"></TextBlock>
            </Grid>
            <Grid Margin="10">
                <TextBox x:Name="SiretTextBox" VerticalAlignment="Center"/>
                <TextBlock Text="Siret" IsHitTestVisible="False" 
                           Foreground="Gray" VerticalAlignment="Center" 
                           Margin="5,0,0,0"></TextBlock>
            </Grid>
            <Button Content="Ajouter" Click="AjouterButton_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
