<Window x:Class="InventaireGrossiste.EditClients.AjoutManuClients"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ajouter un client" Height="300" Width="400">

    <Grid>
        <StackPanel Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Nom" Grid.Row="0" Margin="0,0,0,5"/>
                <TextBox x:Name="NomTextBox" Grid.Row="1" Margin="0,0,0,10"/>

                <TextBlock Text="Adresse" Grid.Row="2" Margin="0,0,0,5"/>
                <TextBox x:Name="AdresseTextBox" Grid.Row="3" Margin="0,0,0,10"/>

                <TextBlock Text="Siret" Grid.Row="4" Margin="0,0,0,5"/>
                <TextBox x:Name="SiretTextBox" Grid.Row="5" Margin="0,0,0,10"/>
            </Grid>

            <Button Content="Ajouter" Click="AjouterButton_Click" Margin="10"/>

        </StackPanel>
    </Grid>
</Window>
