<Window x:Class="InventaireGrossiste.EditClients.ModifManuClients"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Modifier Client" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Nom" Margin="0,0,0,5"/>
            <TextBox Text="{Binding Nom}" Margin="0,0,0,10"/>

            <TextBlock Text="Adresse" Margin="0,0,0,5"/>
            <TextBox Text="{Binding Adresse}" Margin="0,0,0,10"/>

            <TextBlock Text="SIRET" Margin="0,0,0,5"/>
            <TextBox Text="{Binding Siret}" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Enregistrer" Width="75" Margin="0,0,5,0" Click="BtnSave_Click"/>
                <Button Content="Annuler" Width="75" Click="BtnCancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>