<Page x:Class="InventaireGrossiste.Graphique"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:InventaireGrossiste"
      Title="Graphique" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TextBlock pour le message d'avertissement -->
        <TextBlock x:Name="WarningTextBlock" Foreground="Red" FontWeight="Bold" Visibility="Collapsed" Margin="10" Grid.Row="0"/>

        <!-- WebView2 pour afficher le graphique -->
        <wv2:WebView2 x:Name="ChartWebView" Grid.Row="1" Margin="10" DefaultBackgroundColor="Transparent"/>
     </Grid>
</Page>
